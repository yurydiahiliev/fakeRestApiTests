{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Books Array",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "integer" },
      "title": { "type": ["string", "null"] },
      "description": { "type": ["string", "null"] },
      "pageCount": { "type": "integer" },
      "excerpt": { "type": ["string", "null"] },
      "publishDate": { "type": "string" }
    },
    "required": ["id", "pageCount", "publishDate"]
  }
}
