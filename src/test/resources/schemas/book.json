{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Books Array",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "integer" },
      "title": { "type": ["string", "null"] },
      "description": { "type": ["string", "null"] },
      "pageCount": { "type": "integer" },
      "excerpt": { "type": ["string", "null"] },
      "publishDate": {
        "type": "string",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.\\d+)?(Z|[+-][0-9]{2}:[0-9]{2})?$",
        "description": "ISO-like date without timezone, e.g., 0001-01-01T00:00:00"
      }

    },
    "required": ["id", "pageCount", "publishDate"]
  }
}
