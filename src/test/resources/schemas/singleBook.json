{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Book",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "title": {
      "type": ["string", "null"]
    },
    "description": {
      "type": ["string", "null"]
    },
    "pageCount": {
      "type": "integer"
    },
    "excerpt": {
      "type": ["string", "null"]
    },
    "publishDate": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(\\.\\d+)?(Z|[+-][0-9]{2}:[0-9]{2})?$",
      "description": "ISO 8601 date-time format, accepts optional fractional seconds and timezone (e.g., 2025-10-07T08:49:45.951251Z)"
    }
  },
  "required": ["id", "pageCount", "publishDate"]
}