{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Book",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer"
    },
    "title": {
      "type": ["string", "null"]
    },
    "description": {
      "type": ["string", "null"]
    },
    "pageCount": {
      "type": "integer"
    },
    "excerpt": {
      "type": ["string", "null"]
    },
    "publishDate": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["id", "pageCount", "publishDate"]
}